@require 'utils/*'
@require 'fragments/*'

html, body
    margin 0
    padding 0
    font-family "kepler-std", script
    font-weight 400
    font-style normal
    color black
    background-color white
    width 100%
    height 100%

#cover
    margin 0
    padding 3em 0 3em 0
    background-color #4a4a4a

#intro, #analysis, #cover-content, #attribution
    width 80%
    max-width 40em
    margin 5em auto

#attribution
    margin-top 1em 
    text-transform uppercase
    color #4a4a4a
    a
        color black
        text-decoration none

h1
    font-size 3.5em
    color white

h2
    color white

.emph
    font-size 1.3em
    font-weight bold