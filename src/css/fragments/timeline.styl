#timeline
    width 100%
    height 100%

#domLine, #intLine
    stroke-width 1px
    stroke black
    opacity 0.5
    stroke-dasharray 2, 2  

.year-marker-dash
    stroke black

#graphic-hover
    opacity 0
    position fixed
    pointer-events none
    background-color white
    max-width 12%
    transform translate(10%, -50%)
    padding 5px
    border 1px solid black
    &.visible 
        opacity 1
    &.right
        text-align right
        transform translate(-110%, -50%)


#graphic-main-container
    display flex
    flex-flow column
    height 100%
    width 55%
    position absolute
    left 25%

.main-text
    display none
    &.visible 
        display block