#timeline
    width 100%
    height 100%

#domLine, #intLine, path
    stroke-width 1px
    stroke black
    opacity 0.5
    stroke-dasharray 2, 2  
    fill none

.year-marker-dash
    stroke black

#graphic-hover
    opacity 0
    position fixed
    pointer-events none
    background-color white
    max-width 12%
    transform translate(10%, -50%)
    padding 5px
    border 1px solid black
    transition opacity 250ms
    &.visible 
        opacity 1
    &.right
        text-align right
        transform translate(-110%, -50%)


#graphic-main-container
    display flex
    flex-flow column
    justify-content center
    height 100%
    width 55%
    position absolute
    left 25%

.main-text
    flex-grow 1
    max-height 15%
    margin 2% 0
    padding 5% 5%
    box-sizing border-box
    display none
    width 95%
    position relative
    border 3px solid grey
    border-radius 5px
    opacity 0
    transition opacity 250ms
    overflow-y auto
    &.visible 
        opacity 1 
        display block
    &.right
        left 5%
    &.selection
        max-height 50%
        flex-grow 3

path
    opacity 0
    transition opacity 250ms
    &.visible
        opacity 0.3